@import 'variables.styl';

.nav-link {
  display: inline-block;
  padding: 0 1em;
  border-radius: 16px;
  text-decoration: none;

  &.active {
    background: color-link;
    color: #fff;
  }
}

.side-list {
  display: block;
  list-style: none;
  padding: .5em 0;
  margin: 0;
  background: #f7f7f7;
  flex-basis: 25%;

  li {
    margin: 0;
  }

  a {
    display: block;
    padding: .5em 1em;
    color: color-link;
    text-decoration: none;

    &.active {
      background: color-link;
      color: #f7f7f7;
    }
  }

  input[type="search"] {
    margin: 1em;
    border-radius: 32px;
    border: 1px solid #ccc;
    outline: 0;

    &:focus {
      border-color: color-link;
      box-shadow: 0 0 5px rgba(color-link, .5);
    }
  }
}
